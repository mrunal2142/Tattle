<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <agency.tango.android.avatarview.views.AvatarView
        android:id="@+id/addPImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:av_border_color="@android:color/white"
        app:av_border_width="0dp"
        app:av_text_size_percentage="35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/addPName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:fontFamily="@font/assistant"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/addPImg"
        app:layout_constraintStart_toEndOf="@+id/addPImg"
        app:layout_constraintTop_toTopOf="@+id/addPImg"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/addPNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/assistant"
        android:text="Please wait"
        android:textSize="12dp"
        android:maxWidth="200dp"
        android:maxHeight="17dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/addPName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addPName"
        app:layout_constraintTop_toBottomOf="@+id/addPName" />

    <Button
        android:id="@+id/addP"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#F5F5F5"
        android:fontFamily="@font/assistant"
        android:text="Add"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/done"
        android:layout_width="15dp"
        android:visibility="invisible"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/addP"
        app:layout_constraintEnd_toEndOf="@+id/addP"
        app:layout_constraintStart_toStartOf="@+id/addP"
        app:layout_constraintTop_toTopOf="@+id/addP"
        app:srcCompat="@drawable/checkmark" />


</androidx.constraintlayout.widget.ConstraintLayout>